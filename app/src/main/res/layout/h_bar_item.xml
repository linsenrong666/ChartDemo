<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/h_chart_label_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="大家电"/>

    <RelativeLayout
        android:id="@+id/h_chart_bar_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/h_chart_bar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_item_bar_chart"
            tools:layout_width="100dp"/>

        <ImageView
            android:id="@+id/h_chart_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignRight="@id/h_chart_bar"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:background="@drawable/bg_item_bar_chart_btn"
            android:paddingLeft="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_right_arrow_svg"/>

        <TextView
            android:minWidth="10dp"
            android:id="@+id/h_chart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="200"/>

        <TextView
            android:id="@+id/h_chart_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/h_chart_bar"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:minWidth="10dp"
            tools:text="0%"/>


    </RelativeLayout>

</LinearLayout>